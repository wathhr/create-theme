{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "paths": {
      "@constants": [
        "constants"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@utils": [
        "utils"
      ],
      "@utils/*": [
        "utils/*"
      ]
    }
  },
  "include": ["src/**/*"],
}
